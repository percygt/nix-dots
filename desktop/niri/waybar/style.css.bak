@import url("./nix.css");
@import url("./extra.css");

* {
  font-weight: 400;
  min-height: 0px;
}

tooltip {
  background: @bg-alt;
  color: @text-light;
  border-radius: 5px;
  border: 1px solid @blue;
}

window#waybar {
  background: @bg-alt;
  color: @text-light;
  border-radius: 0px;
  border-bottom: 1px solid @grey;
}

window#waybar.fullscreen {
  border-bottom: 1px solid @bg-alt;
}

#workspaces {
  margin: 0px;
  padding: 0px;
}

/* button { */
/*   border-color: transparent; */
/*   background: transparent; */
/*   border: 1px solid transparent; */
/*   padding: 0px; */
/*   margin: 0px; */
/* } */

#workspaces button {
  margin: 0px;
  padding: 0px;
  border: unset;
}

#workspaces button:focused {
  box-shadow: inherit;
  text-shadow: inherit;
}

#workspaces button label {
  color: @grey;
  font-weight: 400;
}

#workspaces button.active label {
  border-top: 1px solid @blue;
  color: @text-light;
  font-weight: 900;
}

#custom-menu {
  border-radius: 2px 0px 0px 2px;
  /* padding-left: 7px; */
}

#custom-rebuild {
  font-size: 16px;
  padding-left: 7px;
  padding-right: 5px;
  color: @purple;
  border-radius: 0px 2px 2px 0px;
}

