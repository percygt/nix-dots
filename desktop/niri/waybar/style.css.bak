#battery.charging {
  color: @green;
}

#battery.critical:not(.charging) {
  color: @red;
}

#battery.warning:not(.charging) {
  color: @orange;
}

#cpu,
#bluetooth,
#temperature,
#memory {
  min-width: 40px;
}

#custom-menu {
  padding: 2px;
}
#cpu,
#tray,
#bluetooth,
#temperature,
#memory,
#window,
#wireplumber {
  padding: 0px 5px;
}

#custom-idlesleep,
#custom-pomo,
#clock {
  padding: 0px 5px;
}

#custom-rebuild.fail {
  color: @red;
}

#custom-rebuild.ongoing {
  color: @green;
}

#custom-auto-cpufreq,
#custom-wlsunset,
#battery,
#network,
#backlight,
#idle_inhibitor {
  padding: 0px 5px;
}

#mpris {
  padding: 0px 10px;
}

#pulseaudio.source-muted {
  color: @grey-alt;
}

#temperature {
  color: @blue;
}
#temperature.critical {
  color: @red;
}

#wireplumber.muted {
  color: @grey-alt;
}
#memory {
  color: @blue;
}
#memory.warning {
  color: @orange;
}
#memory.critical {
  color: @red;
}
label.module {
  margin: 0px;
  padding: 0px;
}
