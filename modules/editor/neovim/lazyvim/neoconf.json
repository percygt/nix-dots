{
  "neodev": {
    "library": {
      "enabled": true,
      "plugins": true
    }
  },
  "neoconf": {
    "live_reload": true,
    "filetype_jsonc": true,
    "plugins": {
      "lua_ls": {
        "enabled": true
      },
      "jsonls": {
        "enabled": true
      }
    }
  },
  "lspconfig": {
    "rust-analyzer": {
      "semanticHighlighting.punctuation.enable": true,
      "semanticHighlighting.punctuation.macro.bang": true,
      "diagnostics.enable": true,
      "diagnostics.experimental.enable": true,
      "assist.emitMustUse": true,
      "procMacro.enable": true
    },
    "cssls": {
      "css": {
        "lint": {
          "unknownAtRules": "ignore"
        }
      }
    },
    "jsonls": {
      "json": {
        "format": {
          "enable": true
        },
        "validate": {
          "enable": true
        }
      }
    },
    "yamlls": {
      "redhat.telemetry.enabled": false,
      "yaml": {
        "keyOrdering": false,
        "format": {
          "enable": true
        },
        "validate": true,
        "schemaStore": {
          // Must disable builtin schemaStore support to use schemas from schemastore.nvim plugin
          "enable": false,
          // Avoid TypeError: Cannot read properties of undefined (reading 'length')
          "url": ""
        }
      }
    },
    "clangd": {
      "clangd.restartAfterCrash": true,
      "clangd.onConfigChanged": "restart",
      "clangd.serverCompletionRanking": true,
      "clangd.checkUpdates": false
    },
    "gopls": {
      "completeUnimported": true,
      "usePlaceholders": true,
      "analyses": {
        "unusedparams": true
      }
    },
    "pylsp": {
      "pylsp.plugins.ruff.enabled": true,
      "pylsp.plugins.jedi_completion.fuzzy": false,
      "pylsp.plugins.pyls_isort.enabled": false,
      "pylsp.plugins.black.enabled": false,
      "pylsp.plugins.pylint.enabled": false,
      "pylsp.plugins.pyflakes.enabled": false,
      "pylsp.plugins.flake8.enabled": false
    },
    "bashls": {},
    "lua_ls": {
      "Lua": {
        "runtime": {
          "version": "LuaJIT"
        },
        "formatters": {
          "ignoreComments": true
        },
        "workspace": {
          "checkThirdParty": "Disable"
        },
        "signatureHelp": { "enabled": true },
        "format": {
          "enable": false,
          "defaultConfig": {
            "indent_style": "space",
            "indent_size": "2",
            "quote_style": "AutoPreferDouble",
            "call_parentheses": "Always",
            "column_width": "120",
            "line_endings": "Unix"
          }
        },
        "codeLens": {
          "enable": true
        },
        "doc": {
          "privateName": [
            "^_"
          ]
        },
        "completion": {
          "callSnippet": "Replace"
        },
        "diagnostics": {
          "globals": [
            "vim",
            "describe",
            "it",
            "assert",
            "stub"
          ],
          "disable": [
            "duplicate-set-field",
            "missing-fields"
          ]
        },
        "telemetry": {
          "enable": false
        },
        "hint": {
          "enable": true,
          "setType": true,
          "arrayIndex": "Disable",
          "await": true,
          "paramName": "All",
          "paramType": true,
          "semicolon": "Disable"
        }
      }
    }
  }
}
